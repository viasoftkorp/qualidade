{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@viasoft/inspecao-saida": [
        "apps/inspecao-saida/src"
      ],
      "@viasoft/inspecao-saida/*": [
        "apps/inspecao-saida/src/*"
      ],
      "@viasoft/qualidade-inspecao-saida": [
        "dist/qualidade-inspecao-saida",
        "libs/qualidade-inspecao-saida/src",
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
